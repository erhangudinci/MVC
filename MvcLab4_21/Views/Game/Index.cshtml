@model MvcLab4_21.Models.Game_21
<div id="adding">





    <h2>Game Of 21</h2>
    <h3>@Html.DisplayTextFor(a => a.Announcement)</h3>

    @using (Ajax.BeginForm(actionName: "Game", ajaxOptions: new AjaxOptions { UpdateTargetId = "adding", InsertionMode = InsertionMode.Replace }))
    {
        <h1>@Html.DisplayTextFor(a => a.Total)</h1><br />

        <button type="submit" value="1" name="Add" class="btn btn-secondary">1</button>
        <button type="submit" value="2" name="Add" class="btn btn-secondary">2</button><br />
    }
</div>
